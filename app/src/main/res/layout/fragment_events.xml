<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="50dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <VideoView
        android:id="@+id/videoView22"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">




            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="fill_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="100dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="0dp"
                    app:sliderAnimationDuration="3500"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="2000"
                    app:sliderIndicatorRadius="0dp"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:text="Connect With Us On:"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:id="@+id/imagetext"
                    android:layout_below="@+id/imageSlider"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/social"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:background="#000000"
                    android:layout_below="@+id/imagetext"
                  >

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:padding="0dp"
                        android:layout_margin="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#000000"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="95dp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/fb" />

                            <Button
                                android:id="@+id/buttonfb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#000000"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/twitter" />

                            <Button
                                android:id="@+id/buttontwitter"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#000000"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/insta" />

                            <Button
                                android:id="@+id/buttonInsta"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"

                        android:background="#000000"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#000000"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/linkedin" />

                            <Button
                                android:id="@+id/buttonlink"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#000000"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#000000"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/youtube" />

                            <Button
                                android:id="@+id/buttonyou"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />


                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>





                </LinearLayout>

                <Button
                    android:id="@+id/web"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="177dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/social"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#F84646"
                    android:backgroundTintMode="multiply"
                    android:shadowColor="#FF0202"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:text="Visit Website"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="normal" />


            </RelativeLayout>




    </ScrollView>



    </RelativeLayout>